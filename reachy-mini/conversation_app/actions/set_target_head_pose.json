                },
                "pitch": {
                    "type": "number",
                    "description": "Pitch angle in degrees (tilt up/down)",
                    "default": 0.0
                },
                "yaw": {
                    "type": "number",
                    "description": "Yaw angle in degrees (turn left/right)",
                    "default": 0.0
                },
                "duration": {
                    "type": "number",
                    "description": "Duration of movement in seconds",
                    "default": 1.0
                },
                "speech": {
                    "type": "string",
                    "description": "Optional text to speak via TTS during movement"
                }
            },
            "required": []
        }
    }
}